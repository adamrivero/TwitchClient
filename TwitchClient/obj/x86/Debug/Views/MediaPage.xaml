<Page x:ConnectionId='1'
    x:Class="TwitchClient.Views.MediaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TwitchClient.ViewModels"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ScrollViewer Height="auto" Grid.RowSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <controls:Loading Grid.RowSpan="5" Grid.ColumnSpan="3" Canvas.ZIndex="1" Background="White" Opacity="0.7" IsLoading="{Binding IsLoading}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                            <ProgressRing x:ConnectionId='6' Width="50" Height="50"                                        />
                            <TextBlock FontWeight="SemiBold" FontSize="30" Text="Content is loading"/>
                        </StackPanel>
                    </controls:Loading>
                    <Grid Grid.Row="4" Grid.ColumnSpan="3" Background="DarkGreen" Visibility="{Binding NotifyVisibility}" Opacity="0.6" Width="2000" Canvas.ZIndex="1" Height="40" HorizontalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Run Text="Video is recording: "/>
                            <Run Text="{Binding RecordTime}"/>
                        </TextBlock>
                    </Grid>
                    <MediaElement x:ConnectionId='3' AreTransportControlsEnabled="True"
                              Name="player"
                              Source="{Binding SelectedMedia.Video_source, UpdateSourceTrigger=PropertyChanged}"  
                              Stretch="Uniform"
                              MinHeight="200"
                              MaxHeight="450"
                              Grid.Row="0"
                              Grid.ColumnSpan="2">
                        <MediaElement.TransportControls>
                            <MediaTransportControls IsCompact="True" IsCompactOverlayEnabled="True" IsSeekBarVisible="False" IsZoomButtonVisible="False" IsCompactOverlayButtonVisible="True"></MediaTransportControls>
                        </MediaElement.TransportControls>
                    </MediaElement>
                    <StackPanel Orientation="Vertical" Grid.Column="3">
                    <ScrollViewer CanDrag="True" Margin="5" Height="415" ScrollViewer.BringIntoViewOnFocusChange="True">
                    <RichTextBlock x:ConnectionId='4' ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.IsScrollInertiaEnabled="True" x:Name="ChatBox">
                        <Paragraph>
                            <InlineUIContainer>
                                <ItemsControl ItemsSource="{Binding SelectedMedia.ChatMessages}" Margin="0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                                <RichTextBlock CanBeScrollAnchor="True" ScrollViewer.VerticalScrollMode="Enabled" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.IsScrollInertiaEnabled="True">
                                                    <Paragraph>
                                                    <Run FontWeight="Medium" Text="{Binding User}"/>
                                                    <Run Text="{Binding Message}"/>
                                                </Paragraph>
                                            </RichTextBlock>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </InlineUIContainer>
                        </Paragraph>
                    </RichTextBlock>
                    </ScrollViewer>
                        <TextBox Grid.Column="3"/>
                    </StackPanel>
                    <Image Source="{Binding SelectedMedia.Atr_url}" Width="85" Height="113" Grid.Row="1" Grid.RowSpan="3" VerticalAlignment="Top" Margin="4" HorizontalAlignment="Left"/>
                    <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock FontWeight="SemiBold" TextWrapping="Wrap" FontSize="17" Text="{Binding SelectedMedia.Title}" />
                            <TextBlock FontWeight="SemiLight" TextWrapping="Wrap" Text="{Binding SelectedMedia.Description}"/>
                            <TextBlock FontWeight="SemiLight">
                    <Run x:Uid="PlayIn" Text=": "/>
                    <Run FontWeight="Normal" Text="{Binding SelectedMedia.Game_name, UpdateSourceTrigger=PropertyChanged}"/>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Margin="0,10,10,0" TextWrapping="Wrap"  HorizontalAlignment="Right">
                <Run Text="&#xE77B;" FontFamily="Segoe MDL2 Assets"/>
                <Run Text="{Binding SelectedMedia.Viewer_count, UpdateSourceTrigger=PropertyChanged}"/>
                            </TextBlock>
                            <TextBlock Margin="0,0,10,0"  HorizontalAlignment="Right">
                    <Run Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets"/>
                    <Run Text="{Binding SelectedMedia.View_count, UpdateSourceTrigger=PropertyChanged}"/>
                            </TextBlock>
                            <Button Content="Record" HorizontalAlignment="Center" Command="{Binding StartRecordCommand}"/>
                            <Button Content="Stop" HorizontalAlignment="Center" Command="{Binding StopRecordCommand}"/>
                            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Cast" Command="{Binding ProjectionCommand}" />
                            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Follow" Command="{Binding FollowCommand}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>


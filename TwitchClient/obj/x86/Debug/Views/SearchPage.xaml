<Page
    x:Class="TwitchClient.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TwitchClient.ViewModels"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <Grid Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <ScrollViewer>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="20,0,0,0" x:Uid="TopStream" VerticalAlignment="Center" FontWeight="SemiLight" FontSize="20"/>
                    <GridView ItemsSource="{Binding streamModels, UpdateSourceTrigger=PropertyChanged}"
                  IsItemClickEnabled="True"
                  IsSwipeEnabled="true"
                  SelectionMode="Single"
                  Grid.Row="1"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  SelectedItem="{Binding SelectedInfo, Mode=TwoWay}"
                  HorizontalAlignment="Center">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="ItemClick">
                                <Core:CallMethodAction MethodName="ClickCommand"
                                           TargetObject="{Binding Mode=OneWay}"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapGrid Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="340" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Grid.ColumnSpan="2"  Source="{Binding Thumbnail_url}"/>
                                    <TextBlock Grid.ColumnSpan="2" FontSize="14" FontWeight="Medium" Grid.Row="1" Text="{Binding Title}"/>
                                    <Ellipse Height="25" Margin="0,0,0,0" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Profile_logo}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Margin="5,0,0,0" Grid.Column="1" FontSize="12" FontWeight="SemiLight" Grid.Row="2" Text="{Binding User_name}"/>
                                    <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock FontSize="12" VerticalAlignment="Center" Text="&#xE77B; " FontFamily="Segoe MDL2 Assets" />
                                        <TextBlock FontSize="12" FontWeight="SemiLight" VerticalAlignment="Center" Text="{Binding Viewer_count}"/>
                                    </StackPanel>
                                    <TextBlock Margin="5,0,0,0" Grid.Column="1" FontSize="12" FontWeight="SemiLight" Grid.Row="3" Text="{Binding Game_name}"/>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

